<script>
    $(".side_nave_hide").remove();

    $(document).ready(function () {

        $("body").on("click", ".customerdetails_", function () {

           // $("#customerdetailsModal").modal("show");
           var id = $(this).attr("id");

            $.ajax({
                url: `/vendor/customerDetails/`+id,
                dataType: 'json',
                type: 'POST',
                data: null,
                success: function (response) {
                    debugger;

                    if (response) {

                        
                          var data = $.parseJSON(response);
                          $.each(data, function () {
                              $("#name").val(this.first_name + " " + this.last_name);
                              $("#email").val(this.email);
                              $("#address").val(this.Address);
                              $("#mobileno").val(this.Mobile);

                           
                        });


                        debugger;
                        $("#customerdetailsModal").modal("show");
                       

                      
                    }

                },
                error: function (error) {
                   
                    alert(`${error}\n Error occurd! check your console for Error.`);
                    console.log(error)
                }
            });
        })

        $("#products_date").show();
       // myModal_categoryVisProductsforVendor
        $("#category_data").hide();
        $("#brand_data").hide();

        $('.table_show').change(function () {
            debugger;
            var a = this.value;
            if (a == "products") {

                $("#products_date").show();

                $("#category_data").hide();
                $("#brand_data").hide();
            }
            if (a == "categories") {
                $("#category_data").show();

                $("#products_date").hide();
                $("#brand_data").hide()
            }
            if (a == "brands") {
                $("#brand_data").show();

                $("#products_date").hide();
                $("#category_data").hide();

            }


        })
    })

</script>
