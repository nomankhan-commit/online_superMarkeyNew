<div class="container-fluid">
    <div class="row" id="products_date">

        <div class="col-md-12">




            <table  id="myTable">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Product</th>
                        
                        <th scope="col">Dis</th>
                       
                        <th scope="col">Retail Price</th>
                        <th scope="col">Quentity </th>
                      
                        <th scope="col">imgPath</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{var a = 0; }
                    @foreach (var item in ViewBag.data)
                    {
                        a++;
                        var name = item.imgPath;
                    <tr>
                        <td>@item.Product_ID</td>
                        <td>@item.Product_name</td>
                      
                        
                        <td>@item.Product_disc</td>
                       
                        <td>@item.retail_price</td>

                        <td><input type="text"  /></td>
                      
                       
                        <td colspan=4><img src="~/AddProducts/Image/@name" alt="~/AddProducts/Image/@name" border=3 height=100 width=100></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="javascript:;" class="addQuentity" id="@item.Product_ID">Add</a>
                                @*<button type="button" name="@item.Product_ID"  id="@item.Product_ID"  class="btn btn-primary buy_products">buy</button>*@
