        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-12">


        <label class="form-check-label">
            <h1 id="amount">RS --- @ViewBag.amount PKR</h1>
            <input type="hidden" value="@ViewBag.amount" id="hiddemamount" />
        </label>
      @if (ViewBag.amount > 0)
      {
        <label class="form-check-label">
            <a href="javascript:;" class="btn btn-success" id="makeorder">Make Order</a>
        </label>
      }
       




    </div>

</div>
<script>
    $(".side_nave_hide").remove();

    $(document).ready(function () {


     


        $("#products_date").show();

        $("#category_data").hide();
        $("#brand_data").hide();
     
        $('.table_show').change(function () {
            debugger;
            var a = this.value;
            if (a == "products") {      

                $("#products_date").show();

                $("#category_data").hide();
                $("#brand_data").hide();
            }
            if (a == "categories") {
                $("#category_data").show();

                $("#products_date").hide();
                $("#brand_data").hide()
            }
            if (a == "brands") {
                $("#brand_data").show();

                $("#products_date").hide();
                $("#category_data").hide();
          
            }


        })
       

    })

</script>
