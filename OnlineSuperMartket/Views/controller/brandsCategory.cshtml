<script>
    $(".side_nave_hide").remove();

    $(document).ready(function () {
        $("#products_date").show();

        $("#category_data").hide();
        $("#brand_data").hide();

        $('.table_show').change(function () {
            debugger;
            var a = this.value;
            if (a == "products") {

                $("#products_date").show();

                $("#category_data").hide();
                $("#brand_data").hide();
            }
            if (a == "categories") {
                $("#category_data").show();

                $("#products_date").hide();
                $("#brand_data").hide()
            }
            if (a == "brands") {
                $("#brand_data").show();

                $("#products_date").hide();
                $("#category_data").hide();

            }


        })

        $('body').on('click', ".dltBrandCat", function () {
            $(".loader_").show();
            debugger
            data = {};
            data.type = $(this).attr('tp');
            data.id = $(this).attr('id');

            $.ajax({
                url: `/controller/dltCatBrand`,
                dataType: 'json',
                type: 'POST',
                data: data,
                success: function (response) {
                    $(".loader_").hide();
                    if (response == "can not dlt") {
                        alert("it can not be deleted it is link with products.");
                    }
                    else {
                        window.location.href = "/controller/brandsCategory";
                    }

               

                },
                error: function (error) {
                    $(".loader_").hide();
                    alert(`${error}\n Error occurd! check your console for Error.`);
                    console.log(error)
                }
            });

        })

     


    })


</script>
