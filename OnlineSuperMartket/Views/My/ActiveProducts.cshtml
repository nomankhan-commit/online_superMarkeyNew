<script>
    $(".side_nave_hide").remove();

    $(document).ready(function () {
        $("#products_date").show();

        $("#category_data").hide();
        $("#brand_data").hide();

        $('.table_show').change(function () {
            debugger;
            var a = this.value;
            if (a == "products") {

                $("#products_date").show();

                $("#category_data").hide();
                $("#brand_data").hide();
            }
            if (a == "categories") {
                $("#category_data").show();

                $("#products_date").hide();
                $("#brand_data").hide()
            }
            if (a == "brands") {
                $("#brand_data").show();

                $("#products_date").hide();
                $("#category_data").hide();

            }


        })
    })

</script>
